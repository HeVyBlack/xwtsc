{
  "name": "xwtsc",
  "version": "0.0.3",
  "description": "",
  "main": "bin/main.js",
  "bin": "bin/main.js",
  "scripts": {
    "dev": "pnpm run clear && tsc --watch",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "check": "tsc --noEmit",
    "clear": "rimraf bin tsconfig.tsbuildinfo",
    "prepublish": "pnpm run format && pnpm run lint && pnpm run clear && pnpm run build",
    "publish": "pnpm run prepublish && npm publish"
  },
  "keywords": [
    "typescript",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HeVyBlack/xwtsc"
  },
  "author": "DaniJge <danielg2964@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/module-alias": "2.0.2",
    "@types/node": "20.8.2",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "39.1.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "typescript": "5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.2"
  },
  "dependencies": {
    "module-alias": "2.2.3",
    "ts-morph": "20.0.0",
    "tsc-alias": "1.8.8"
  }
}
